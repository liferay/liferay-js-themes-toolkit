{
	"devDependencies": {
		"chalk": "^3.0.0",
		"eslint": "^6.5.1",
		"eslint-config-liferay": "^13.0.0",
		"fs-extra": "^8.1.0",
		"jest": "^24.1.0",
		"liferay-js-publish": "^1.0.1",
		"prettier": "^1.18.2",
		"yargs": "^15.1.0"
	},
	"private": true,
	"repository": "https://github.com/liferay/liferay-js-themes-toolkit",
	"scripts": {
		"changelog": "npx liferay-changelog-generator",
		"changelog:regenerate": "npx liferay-changelog-generator --regenerate",
		"ci": "yarn format:check && yarn lint && yarn test",
		"format": "prettier --write \".*.js\" \"*.{js,json,md}\" \"packages/**/*.{js,json,md}\" \"scripts/*.js\"",
		"format:check": "prettier --list-different \".*.js\" \"*.{js,json,md}\" \"packages/**/*.{js,json,md}\" \"scripts/*.js\"",
		"lint": "eslint \".*.js\" \"*.js\" \"packages/**/*.js\" \"scripts/*.js\"",
		"lint:fix": "eslint --fix \".*.js\" \"*.js\" \"packages/**/*.js\" \"scripts/*.js\"",
		"qa": "node scripts/qa.js",
		"updatePackageVersions": "replace-in-file --configFile=update-package-versions-config.js",
		"test": "jest"
	},
	"keywords": [
		"yeoman-generator"
	],
	"dependencies": {
		"replace-in-file": "^3.4.2"
	},
	"jest": {
		"setupFilesAfterEnv": [
			"<rootDir>/jest.js"
		],
		"testPathIgnorePatterns": [
			"/__fixtures__/",
			"/__snapshots__/",
			"/fixtures/",
			"/node_modules/"
		],
		"modulePathIgnorePatterns": [
			"/generator-liferay-theme/generators/layout/"
		],
		"testRegex": [
			".*\\.test\\.js",
			"/__tests__/.*\\.js",
			"/plugin/test/.*\\.js"
		]
	},
	"workspaces": [
		"packages/*"
	]
}
